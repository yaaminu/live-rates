<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_violet</item>
        <item name="colorPrimaryDark">@color/dark_violet</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="expense_summary_item">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">@dimen/default_gap</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="incomes_source_list_item_money_values">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="live_exchange_rate_mini_table_cells">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="fontPath">fonts/roboto-regular.ttf</item>
    </style>

    <style name="pane">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">8.0dip</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:minHeight">120.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="pane.minipane" parent="@style/pane">
        <item name="android:layout_marginRight">8.0dip</item>
    </style>

    <style name="rounded_background_text_style">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_lens_green_24dp</item>
        <item name="android:padding">@dimen/default_gap</item>
        <item name="android:layout_width">72.0dip</item>
        <item name="android:layout_height">72.0dip</item>
        <item name="fontPath">fonts/roboto-light.ttf</item>
    </style>

    <style name="sliding_menu_item_style">
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Widget.ActionMode.Title
        </item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">fonts/roboto-regular.ttf</item>
    </style>

    <style name="widget_row_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:visibility">visible</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginBottom">@dimen/default_gap</item>
    </style>

    <style name="widget_row_text_style">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>
