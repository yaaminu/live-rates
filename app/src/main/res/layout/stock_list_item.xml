<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="1"
    android:background="@drawable/equity_list_item_bg_no_change"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_gap"
    android:paddingLeft="@dimen/default_gap"
    android:paddingRight="@dimen/default_gap"
    android:paddingTop="@dimen/default_gap">

    <TextView
        android:id="@+id/tv_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_gap"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/white"
        tools:text="GCB" />

    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:gravity="center"
        android:paddingBottom="@dimen/default_gap"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/white"
        tools:text="Ghana Commercial Bank" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/home_screen_watch_list_item"
        tools:text="GHâ‚µ 233.34" />

    <TextView
        android:id="@+id/tv_change"
        style="@style/home_screen_watch_list_item"
        tools:text="+23.34(22.3%)" />


    <TextView
        android:id="@+id/tv_market_volume"
        style="@style/home_screen_watch_list_item"
        tools:text="24H Vol 3334" />
</LinearLayout>
