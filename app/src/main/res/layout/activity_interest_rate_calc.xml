<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1.0">

        <include layout="@layout/toolbar" />

        <android.support.v7.widget.GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/default_gap"
            app:columnCount="3">

            <android.support.v4.widget.Space
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_gap"
                android:layout_marginBottom="@dimen/default_gap"
                app:layout_columnSpan="3" />


            <EditText
                android:id="@+id/et_input"
                android:gravity="center"
                android:hint="@string/principal"
                android:inputType="numberDecimal"
                android:maxLength="12"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1" />

            <android.support.v4.widget.Space
                android:layout_height="5dp"
                app:layout_columnSpan="1" />

            <EditText
                android:id="@+id/et_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/rate_percent"
                android:inputType="numberDecimal"
                android:maxLength="5"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1" />


            <android.support.v4.widget.Space
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_gap"
                android:layout_marginBottom="@dimen/default_gap"
                app:layout_columnSpan="3" />

            <LinearLayout
                android:id="@+id/tr_tresury_bill_days"
                android:layout_width="match_parent"
                app:layout_columnSpan="3">

                <EditText
                    android:id="@+id/et_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/tv_duration_label"
                    android:inputType="number"
                    android:maxLength="5" />

                <Spinner
                    android:id="@+id/sp_days_month_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/duration_types_interest"
                    android:padding="@dimen/default_gap" />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="fill_parent"
                android:layout_height="@dimen/default_gap"
                android:layout_marginBottom="@dimen/default_gap"
                app:layout_columnSpan="3" />
        </android.support.v7.widget.GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/calculatorsPrimary"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_interest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/default_gap"
                    android:text="@string/interest"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/white"
                    tools:text="Interest\n\n8747447447474747474" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/default_gap"
                    android:text="@string/amount"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/white"
                    tools:text="Total\n\n8747447447474747474" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_gap"
                android:gravity="center"
                android:paddingTop="@dimen/default_gap"
                android:text="@string/your_bank_s_terms_and_conditions_might_affect_this_value"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/white"
                app:layout_columnSpan="2" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
