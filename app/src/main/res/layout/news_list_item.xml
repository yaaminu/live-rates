<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_gap"
    android:layout_marginBottom="@dimen/default_gap"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_feed_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                app:layout_columnSpan="1"
                tools:text="Inflation shoots up in second quarter" />


            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_gap"
                tools:text="Short description of item" />

            <TextView
                android:id="@+id/tv_date_published"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_gap"
                tools:text="2 days ago" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_feed_thumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:contentDescription="@string/feed_thumbnail"
            android:maxHeight="100dp"
            android:maxWidth="50dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/source_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_gap"
        android:background="@color/business_news_color_primary"
        android:gravity="center_vertical"
        android:padding="@dimen/default_gap">

        <ImageButton
            android:id="@+id/ib_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_marginRight="@dimen/default_gap"
            android:background="@color/transparent"
            android:contentDescription="@string/share"
            android:src="@drawable/ic_action_share"
            tools:ignore="RtlHardcoded" />

        <ImageButton
            android:id="@+id/ib_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_gap"
            android:background="@color/transparent"
            android:contentDescription="@string/bookmark"
            android:src="@drawable/ic_bookmark_black_24dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/white"
            android:textStyle="italic|bold"
            tools:text="myjoyonline.com" />
    </LinearLayout>
</LinearLayout>
